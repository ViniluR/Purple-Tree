CREATE TABLE Usuario (
  username VARCHAR(20) NOT NULL,
  nome VARCHAR(30) NOT NULL,
  senha VARCHAR(300) NOT NULL,
  biografia VARCHAR(500) NOT NULL,
  PRIMARY KEY (username)
);

CREATE TABLE segue (
  username_1 VARCHAR(20) NOT NULL,
  segueusername_2 VARCHAR(20) NOT NULL,
  PRIMARY KEY (username_1, segueusername_2),
  FOREIGN KEY (username_1) REFERENCES Usuario(username),
  FOREIGN KEY (segueusername_2) REFERENCES Usuario(username)
);

CREATE TABLE Post (
  id INT NOT NULL AUTO_INCREMENT,
  conteudo TEXT NOT NULL,
  fixado TINYINT(1) NOT NULL,
  username VARCHAR(20) NOT NULL,
  id_postcomentado INT,
  PRIMARY KEY (id),
  FOREIGN KEY (username) REFERENCES Usuario(username),
  FOREIGN KEY (cont√©m_id) REFERENCES Post(id)
);

CREATE TABLE curte (
  username VARCHAR(20) NOT NULL,
  id INT NOT NULL,
  PRIMARY KEY (username, id),
  FOREIGN KEY (username) REFERENCES Usuario(username),
  FOREIGN KEY (id) REFERENCES Post(id)
);
